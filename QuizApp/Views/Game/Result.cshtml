﻿@{
    ViewData["Title"] = "Result Page";
}
@model Player

<div class="container mt-5">
    <form asp-controller="Game" asp-action="StartQuiz" method="get">
        <button type="submit" class="btn btn-success">ქუიზზე დაბრუნება</button>
    </form>
    <h1>Player Result</h1>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <h3>Player Information</h3>
            <dl class="row">
                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Model.ID</dd>

                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Highest Score:</dt>
                <dd class="col-sm-8">@Model.HighestScore</dd>

                <dt class="col-sm-4">Wins:</dt>
                <dd class="col-sm-8">@Model.Wins</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <ul class="list-group">
                @foreach (var round in Model.Rounds)
                {
                    <li class="list-group-item">
                        Has Won: @round.IsWon<br>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>